<%- include('../page/header')%>
    <%- include('../page/aside')%>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Sửa thể loại
                </h1>
            </section>
            <!-- Main content -->
            <section class="content">
                <!-- Default box -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <form action="/put-category" method="POST">
                                <div class="card-body">
                                    <div class="form-group">
                                        <label for="">Tên</label>
                                        <input type="text" name="ten" class="form-control" value="<%= data.ten%>"
                                            aria-describedby="helpId">
                                    </div>
                                    <div>
                                        <input name="id" value="<%= data.id %>" hidden />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Trạng thái</label>
                                        <div>
                                            <select class="form-control" name="trangthai">
                                                <% let options=["1","0"]; %>
                                                    <% for ( let i=0; i < options.length; i++ ){ %>
                                                        <% let isSelected=(data.trangthai==options[i] ) ? "selected"
                                                            : "" ; %>
                                                            <option value="<%= options[i]%>" <%=isSelected %>>
                                                                <%= options[i]==="1" ? "Hiện" : "Ẩn" %>
                                                            </option>
                                                            <% } %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i>Lưu
                                            Lại</button>
                                        <a name="" id="" class="btn btn-default float-right" href="/category"><i
                                                class="fa fa-arrow-left" aria-hidden="true"></i> Quay Lại</a>
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <!-- /.box-footer-->
                </div>
                <!-- /.box -->
            </section>
            <!-- /.content -->
        </div>
        <%- include('../page/footer')%>

            </body>

            </html>
            <!-- /.content-wrapper -->