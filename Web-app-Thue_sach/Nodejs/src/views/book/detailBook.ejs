<%- include('../page/header')%>
    <%- include('../page/aside')%>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Duyệt sách
                </h1>
            </section>
            <!-- Main content -->
            <section class="content">
                <!-- Default box -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <form action="/post-browsebook" method="post">
                                <div class="row g-0">
                                    <div class="col-md-4">
                                        <div class="card-body">
                                            <div>
                                                <input type="hidden" name="id" value="<%= data.id %>" />
                                            </div>
                                            <div class="form-group">
                                                <img id="change-image" width="300" height="300"
                                                    src="/img/<%= data.hinh %>" alt="">
                                            </div>
                                            <div class="form-group">
                                                <label for="">Tên SÁch: </label>
                                                <span for="">
                                                    <%= data.ten %>
                                                </span>
                                            </div>
                                            <div class="form-group">
                                                <label for="">thể loại: </label>
                                                <span for="">
                                                    <%= data.theloai %>
                                                </span>
                                            </div>
                                            <div class="form-group">
                                                <label for="">Tên tác giả: </label>
                                                <span for="">
                                                    <%= data.tentacgia %>
                                                </span>
                                            </div>
                                            <div class="form-group">
                                                <label for="">Người đăng: </label>
                                                <span for="">
                                                    <%= data.nguoidang %>
                                                </span>
                                            </div>
                                            <%if(data.loai==0) {%>
                                                <li class="mb-3">
                                                    <span class="h6">giá</span>
                                                    <span>
                                                        <%= data.gia %>
                                                    </span>
                                                </li>
                                                <li class="mb-3">
                                                    <span class="h6">tiền cọc</span>
                                                    <span>
                                                        <%= data.tiencoc %>
                                                    </span>
                                                </li>
                                                <% } %>
                                                    <button type="submit" class="btn btn-primary"><i
                                                            class="fa fa-save"></i>Duyệt</button>
                                                    <a name="" id="" class="btn btn-default float-right"
                                                        href="/author"><i class="fa fa-arrow-left"
                                                            aria-hidden="true"></i> Quay Lại</a>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="card-body">
                                            <div class="form-group">
                                                <label for="">Mô tả</label>
                                                <div>
                                                    <%= data.mota %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
                <!-- /.box-footer-->

                <!-- /.box -->
            </section>
            <!-- /.content -->
        </div>
        <%- include('../page/footer')%>
            <script>
                function showImage(input) {
                    if (input.files && input.files[0]) {
                        var reader = new FileReader();
                        reader.onload = function (e) {
                            $('#change-image').attr('src', e.target.result).height(300).width(300)
                        };
                        reader.readAsDataURL(input.files[0])
                    }
                }
            </script>

            </body>

            </html>
            <!-- /.content-wrapper -->