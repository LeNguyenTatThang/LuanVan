<%- include('../page/header')%>
    <%- include('../page/aside')%>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Danh sách Sách Chưa Được Duyệt
                </h1>

            </section>
            <!-- Main content -->
            <section class="content">
                <!-- Default box -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <form class="form-inline">
                                    <div class="form-group">
                                        <input value="<%= name %>" type="text" name="name" id="" class="form-control"
                                            placeholder="" aria-describedby="helpId">
                                    </div>
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-search"
                                            aria-hidden="true"></i></button>
                                </form>
                                <hr>
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th class="text-truncate">STT</th>
                                            <th class="text-truncate">Hình</th>
                                            <th class="text-truncate">Tên</th>
                                            <th class="text-truncate">Loại</th>
                                            <th class="text-truncate">Thể Loại </th>
                                            <th class="text-truncate">Người Đăng</th>
                                            <th class="text-truncate">Tác Giả</th>
                                            <th class="text-truncate">Trạng Thái</th>
                                            <th class="text-truncate text-right">Action</th>
                                        </tr>
                                    </thead>
                                    <%if(errcode==1) {%>
                                        <tbody>
                                            <div>
                                                <td scope="row">
                                                    <%=message %>
                                                </td>
                                            </div>
                                        </tbody>
                                        <% }else { %>
                                            <tbody>
                                                <% for(let i=0; i < data.length; i++) { %>
                                                    <tr>
                                                        <td scope="row">
                                                            <%= i+1 %>
                                                        </td>
                                                        <td scope="row">
                                                            <div class="avatar avatar-sm me-3">
                                                                <img src="" />
                                                            </div>
                                                        </td>
                                                        <td scope="row">
                                                            <%= data[i].ten %>
                                                        </td>
                                                        <td scope="row">
                                                            <%= data[i].loai===0 ? "Thuê" : "Đọc online" %>
                                                        </td>
                                                        <td scope="row">
                                                            <%= data[i].theloai %>
                                                        </td>
                                                        <td scope="row">
                                                            <%= data[i].nguoidang %>
                                                        </td>
                                                        <td scope="row">
                                                            <%= data[i].tentacgia %>
                                                        </td>
                                                        <td scope="row">
                                                            <%= data[i].trangthai===0 ? "Ẩn" : "Hiện" %>
                                                        </td>
                                                        <td class="text-right">
                                                            <a class="btn btn-sm btn-success"
                                                                data-id="<%= data[i].id %>"
                                                                href="/get-detailbook?id=<%= data[i].id %>">Duyệt</a>
                                                        </td>
                                                    </tr>
                                                    <% } %>
                                            </tbody>
                                            <% } %>
                                </table>
                                <div>
                                    <nav aria-label="Page navigation">
                                        <ul class="pagination">
                                            <%if(name) {%>
                                                <li class="page-item disabled">
                                                    <a class="page-link"
                                                        href="/book?page=<%= page > 1 ? page - 1 : 1%>&name=<%= name%>"
                                                        aria-label="Previous">
                                                        <span aria-hidden="true">&laquo;</span>
                                                        <span class="sr-only">Previous</span>
                                                    </a>
                                                </li>
                                                <%for(i=1; i<=totalPage; i++){ %>
                                                    <li class="page-item active"><a class="page-link"
                                                            href="?page=<%=i %>&name=<%= name%>">
                                                            <%= i %>
                                                        </a></li>
                                                    <%} %>
                                                        <li class="page-item">
                                                            <a class="page-link"
                                                                href="/book?page=<%= page < totalPage ? page + 1 : totalPage%>&name=<%= name%>"
                                                                aria-label="Next">
                                                                <span aria-hidden="true">&raquo;</span>
                                                                <span class="sr-only">Next</span>
                                                            </a>
                                                        </li>
                                                        <%}else{%>
                                                            <li class="page-item">
                                                                <a class="page-link"
                                                                    href="/book?page=<%= page > 1 ? page - 1 : 1%>"
                                                                    aria-label="Previous">
                                                                    <span aria-hidden="true">&laquo;</span>
                                                                    <span class="sr-only">Previous</span>
                                                                </a>
                                                            </li>
                                                            <%for(i=1; i<=totalPage; i++){ %>
                                                                <li class="page-item"><a class="page-link"
                                                                        href="?page=<%=i %>">
                                                                        <%= i %>
                                                                    </a></li>
                                                                <%} %>
                                                                    <li class="page-item">
                                                                        <a class="page-link"
                                                                            href="/book?page=<%= page < totalPage ? page + 1 : totalPage%>"
                                                                            aria-label="Next">
                                                                            <span aria-hidden="true">&raquo;</span>
                                                                            <span class="sr-only">Next</span>
                                                                        </a>
                                                                    </li>
                                                                    <%} %>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box -->
            </section>
            <!-- /.content -->
        </div>
        <%- include('../page/footer')%>
            <!-- /.content-wrapper -->