<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NodeJs</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div>
            <%- include('../homePage.ejs') %>
        </div>
        <div class="col-sm-12 mt-3">

            <form action="/post-user" method="POST">

                <div class="form-group row">
                    <div class="col-12 mt-3">Create a new user</div>
                    <label for="inputEmail3" class="col-sm-3 mt-3 col-form-label">email:</label>
                    <div class="col-sm-9 mt-3">
                        <input type="email" class="form-control" name="email" placeholder="">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-3 mt-3 col-form-label">Tên:</label>
                    <div class="col-sm-9 mt-3">
                        <input type="text" class="form-control" name="userName" placeholder="">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword4" class="col-sm-3 mt-3 col-form-label">mật khẩu</label>
                    <div class="col-sm-9 mt-3">
                        <input type="password" class="form-control" name="password" placeholder="">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-3 mt-3  col-form-label">giới tính:</label>
                    <div class="col-sm-3 mt-3">
                        <select name="gender" class="form-control">
                            <option value="1">Nam</option>
                            <option value="0">Nữ</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-3 mt-3  col-form-label">quyền</label>
                    <div class="col-sm-3 mt-3">
                        <select name="roleId" class="form-control">>
                            <option value="1">Admin</option>
                            <option value="2">Nv</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10 mt-3">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>

</html>